{
   "AWSEBDockerrunVersion": 2,
   "containerDefinitions": [
    {
      "name" : "client",
      "image" : "amitpandit09/multi-client",
      "hostname" : "client",
      "essential": false,
      "memory" : 200 
    },
    {
      "name" : "server",
      "image" : "amitpandit09/multi-server",
      "hostname":"api",
      "essential" :false,
      "memory" : 200 
    },
    {
     "name" : "worker",
     "image" : "amitpandit09/multi-worker",
     "hostname" : "worker",
     "essential" : false,
     "memory": 200 
    },
    {
     "name" : "nginx",
     "image" : "amitpandit09/multi-nginx",
     "hostname" : "nginx",
     "essential" : true,
     "portMappings": [
     { 
       "hostPort" : 80,
       "containerPort" : 80
     }
      ],
      "links" : ["client","server"],
      "memory" : 200 
     
    }
  ]
}
